{
  "info": {
    "name": "Twitter Scheduler Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "9a3f1c3e-4b84-4a60-9f7b-1234567890ab"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "auth": { "type": "noauth" }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "auth": { "type": "noauth" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res && res.data && res.data.token) {",
                  "  pm.environment.set('token', res.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Tweets",
      "item": [
        {
          "name": "Create Tweet (scheduled)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tweets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tweets"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello from scheduler\",\n  \"scheduledAt\": \"{{futureIso}}\",\n  \"status\": \"scheduled\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res && res.data && res.data._id) { pm.environment.set('tweetId', res.data._id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get My Tweets",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/tweets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tweets"]
            }
          }
        },
        {
          "name": "Update Tweet",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tweets/{{tweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tweets", "{{tweetId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated content\",\n  \"status\": \"scheduled\"\n}"
            }
          }
        },
        {
          "name": "Delete Tweet",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/tweets/{{tweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tweets", "{{tweetId}}"]
            }
          }
        }
      ],
      "auth": {
        "type": "bearer",
        "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ]
      }
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/analytics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics"]
            }
          }
        }
      ],
      "auth": {
        "type": "bearer",
        "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ]
      }
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "Suggest Content",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/ai/suggest",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ai", "suggest"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"topic\": \"javascript\"\n}"
            }
          }
        }
      ],
      "auth": {
        "type": "bearer",
        "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ]
      }
    }
  ],
  "auth": { "type": "noauth" },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" }
  ]
}

